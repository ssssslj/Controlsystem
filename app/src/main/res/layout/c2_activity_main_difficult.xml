<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inner_back"
    android:orientation="vertical"
    tools:context="com.example.controlsystem.c2_operation.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:onClick="back"
                android:src="@drawable/back"/>
            <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="速度:50"
                android:layout_toLeftOf="@id/bluetooth_connect"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"/>
            <ImageView
                android:id="@+id/bluetooth_connect"
                android:layout_centerHorizontal="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="gravity"
                android:src="@drawable/circle"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/bluetooth_connect"
                android:layout_marginLeft="20dp"
                android:onClick="onConnectButtonClicked"
                android:src="@drawable/bluetooth"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="270dp"
                    android:layout_alignParentBottom="true"

                    >
                    <com.example.controlsystem.c2_operation.WheelView
                        android:id="@+id/wheelView_01"
                        android:layout_width="300dp"
                        android:layout_height="270dp" />

                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/seekbar_01"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:maxHeight="8.0dip"
                    android:minHeight="8.0dip"
                    android:paddingLeft="30.0dip"
                    android:paddingRight="30.0dip"

                    android:progressDrawable="@drawable/po_seekbar"
                    android:thumb="@drawable/seekbar_thumb"/>
                <SeekBar
                    android:id="@+id/seekbar_02"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:maxHeight="8.0dip"
                    android:minHeight="8.0dip"
                    android:paddingLeft="19.0dip"
                    android:paddingRight="19.0dip"
                    android:layout_marginTop="10dp"
                    android:progressDrawable="@drawable/po_seekbar"
                    android:thumb="@drawable/seekbar_thumb"   />
                <SeekBar
                    android:id="@+id/seekbar_03"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:maxHeight="8.0dip"
                    android:minHeight="8.0dip"
                    android:paddingLeft="19.0dip"
                    android:paddingRight="19.0dip"
                    android:layout_marginTop="10dp"
                    android:progressDrawable="@drawable/po_seekbar"
                    android:thumb="@drawable/seekbar_thumb"/>
                <SeekBar
                    android:id="@+id/seekbar_04"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:maxHeight="8.0dip"
                    android:minHeight="8.0dip"
                    android:paddingLeft="19.0dip"
                    android:paddingRight="19.0dip"
                    android:layout_marginTop="10dp"
                    android:progressDrawable="@drawable/po_seekbar"
                    android:thumb="@drawable/seekbar_thumb" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/action1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="70dp"
                    android:src="@drawable/action_one"/>
                <ImageView
                    android:id="@+id/action2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/action_two"/>
                <ImageView
                    android:id="@+id/action3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/action_three"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
